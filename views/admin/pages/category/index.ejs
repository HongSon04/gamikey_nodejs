<%- include('../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Danh Mục</span>
    </h4>

    <div class="app-ecommerce">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">Danh Mục</h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
          <a href="/admin/category/create" class="btn btn-primary">Thêm Danh Mục</a>
        </div>
      </div>

      <div class="row">
        <!-- Ajax Sourced Server-side -->
        <div class="card">
          <h5 class="card-header">Bảng Danh Mục</h5>
          <div class="card-datatable text-nowrap">
            <table class="datatables-ajax table">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>ID</th>
                  <th>Tên Danh Mục</th>
                  <th>Trạng Thái</th>
                  <th>Hành Động</th>
                </tr>
              </thead>
              <tbody>
                <% if(categories.length> 0) { %> <% categories.forEach((category,index)=> { %>
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <%= category.id %>
                      </td>
                      <td>
                        <%= category.name %>
                      </td>
                      <td>
                        <% if(category.status==1) { %>
                          <label class="switch">
                            <input type="checkbox" checked class="switch-input" />
                            <span class="switch-toggle-slider">
                              <span class="switch-on">
                                <i class="ti ti-check"></i>
                              </span>
                              <span class="switch-off">
                                <i class="ti ti-x"></i>
                              </span>
                            </span>
                            <span class="switch-label">Hoạt Động</span>
                          </label>
                          <% } else { %>
                            <label class="switch">
                              <input type="checkbox" class="switch-input" />
                              <span class="switch-toggle-slider">
                                <span class="switch-on">
                                  <i class="ti ti-check"></i>
                                </span>
                                <span class="switch-off">
                                  <i class="ti ti-x"></i>
                                </span>
                              </span>
                              <span class="switch-label">Không Hoạt Động</span>
                            </label>
                            <% } %>
                      </td>
                      <td>
                        <!-- EDIT BUTTON -->
                        <a href='/admin/category/edit/<%= category.id%>' class="btn btn-warning waves-effect waves-light"><i
                            class="fa-solid fa-pen-to-square"></i></a>
                        <!-- DELETE BUTTON -->
                        <a href="" class="btn btn-danger waves-effect waves-light"><i
                            class="fa-solid fa-trash-can"></i></a>
                      </td>
                    </tr>
                    <% })%>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center">Không có dữ liệu</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Ajax Sourced Server-side -->
      </div>
    </div>
  </div>
  <!-- / Content -->
  <!-- DATATABLES SETTING -->
  <script>
    $(document).ready(function () {
      let table = $('.datatables-ajax').DataTable({
        processing: true,
        responsive: true,
      });
      table.search.fixed('Hoạt Động', 3).draw();
      table.search.fixed('Không Hoạt Động', 3).draw();
    });
  </script>
  <%- include('../../partials/footer.ejs') %>