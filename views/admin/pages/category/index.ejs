<%- include('../../partials/header.ejs') %>
<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="py-3 mb-0">
    <span class="text-muted fw-light">Ecommerce /</span
    ><span class="fw-medium"> Danh Mục</span>
  </h4>

  <div class="app-ecommerce">
    <!-- Add Product -->
    <div
      class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3"
    >
      <div class="d-flex flex-column justify-content-center">
        <h4 class="mb-1 mt-3">Danh Mục</h4>
      </div>
      <div class="d-flex align-content-center flex-wrap gap-3">
        <a href="/admin/category/create" class="btn btn-primary"
          >Thêm Danh Mục</a
        >
      </div>
    </div>

    <div class="row">
      <!-- Ajax Sourced Server-side -->
      <div class="card">
        <h5 class="card-header">Bảng Danh Mục</h5>
        <div class="card-datatable text-nowrap">
          <table class="datatables-ajax table">
            <thead>
              <tr>
                <th>STT</th>
                <th>ID</th>
                <th>Tên Danh Mục</th>
                <th>Trạng Thái</th>
              </tr>
            </thead>
            <tbody>
              <% if(categories.length> 0) { %> <%
              categories.forEach((category,index)=> { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td>
                  <% if(category.status==1) { %>
                  <span class="badge bg-success">Hoạt Động</span>
                  <% } else { %>
                  <span class="badge bg-danger">Không Hoạt Động</span>
                  <% } %>
                </td>
              </tr>
              <% })%> <% } else { %>
              <tr>
                <td colspan="4" class="text-center">Không có dữ liệu</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      <!--/ Ajax Sourced Server-side -->
    </div>
  </div>
</div>
<!-- / Content -->
<!-- DATATABLES SETTING -->
<script>
  $(document).ready(function () {
    let table = $('.datatables-ajax').DataTable({
      processing: true,
      responsive: true,
    });
    table.search.fixed('Hoạt Động', 3).draw();
    table.search.fixed('Không Hoạt Động', 3).draw();
  });
</script>
