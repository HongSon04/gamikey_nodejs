<%- include('../../partials/header.ejs') %>
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-0">
            <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Danh Mục</span>
        </h4>
        <% let listErrors=[] %>
            <% listErrors=errors.map(error=> error.msg) %>
                <div class="app-ecommerce">
                    <!-- Add Product -->
                    <div
                        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
                        <div class="d-flex flex-column justify-content-center">
                            <h4 class="mb-1 mt-3">Thêm Danh Mục</h4>
                        </div>
                        <div class="d-flex align-content-center flex-wrap gap-3">
                            <a href="/admin/category/create" class="btn btn-danger waves-effect waves-light"><i
                                    class="fa-solid fa-left-from-line"></i> &ensp; Trở Về</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <!-- Product Information -->
                            <div class="card mb-4">
                                <form action="/admin/category/store" method="POST">
                                    <div class="card-header">
                                        <h5 class="card-tile mb-0">Thông Tin Danh Mục</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label" for="name">Tên</label>
                                            <input type="text" class="form-control" id="name" placeholder="Tên Danh Mục"
                                                name="name" aria-label="Tên Danh Mục" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="status">Trạng Thái</label>
                                            <select id="status" name="status" class="form-select"
                                                data-placeholder="Size">
                                                <option value="">---Chọn---</option>
                                                <option value="0">Ẩn</option>
                                                <option value="1">Hiện</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-12 d-flex justify-content-end ">
                                                <a href="/admin/category/create"
                                                    class="btn btn-danger waves-effect waves-light mx-3"><i
                                                        class="fa-solid fa-xmark"></i> &ensp; Hủy</a>
                                                <button type="submit"
                                                    class="btn btn-primary waves-effect waves-light"><i
                                                        class="fa-solid fa-floppy-disk"></i>&ensp;
                                                    Thêm</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
    <!-- / Content -->
    <script src="/admin/js/app-ecommerce-product-add.js"></script>
    <script>
        $(document).ready(function () {
            let errors = "<%= listErrors %>"
            let success = "<%= success %>"
            if (errors != "") {
                errors = errors.split(',');
                errors.forEach(error => {
                    toastr.error(error);
                });
            }
            if (success != "") {
                toastr.success(success);
            }
            // toastr.options.closeDuration = 30000000;
            // toastr.options.timeOut = 30000000;
            // toastr.options.extendedTimeOut = 30000000;
            // toastr.error('Please fill in all the fields');
        })
    </script>
    <%- include('../../partials/footer.ejs') %>