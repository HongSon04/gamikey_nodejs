<%- include('../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Đơn Hàng</span>
    </h4>

    <div class="app-ecommerce">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">Đơn Hàng</h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
        </div>
      </div>
      <% let listErrors=[] %>
        <% listErrors=errors.map(error=> error.msg) %>
          <div class="row">
            <!-- Ajax Sourced Server-side -->
            <div class="card">
              <h5 class="card-header">Bảng Đơn Hàng</h5>
              <div class="card-datatable text-nowrap">
                <table class="datatables-ajax table">
                  <thead>
                    <tr>
                      <th>STT</th>
                      <th>INVOICE ID</th>
                      <th>Tên Khách Hàng</th>
                      <th>Email</th>
                      <th>Số Điện Thoại</th>
                      <th>Thành Tiền</th>
                      <th>Giảm Giá</th>
                      <th>Tổng Tiền</th>
                      <th>Phương Thức Thanh Toán</th>
                      <th>Hành Động</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(orders.length> 0) { %> <% orders.forEach((order,index)=> { %>
                        <tr>
                          <td>
                            <%= index + 1 %>
                          </td>
                          <td>
                            <%= order.invoice_id %>
                          </td>
                          <td>
                            <%= order.customer_name %>
                          </td>
                          <td>
                            <%= order.customer_email %>
                          </td>
                          <td>
                            <%= order.customer_phone %>
                          </td>
                          <td>
                            <%= order.sub_total %>
                          </td>
                          <td>
                            <%= order.discount_amount %>
                          </td>
                          <td>
                            <%= order.total_amount %>
                          </td>
                          <td>
                            <%= order.payment_method %>
                          </td>
                          <td>
                            <div class="d-flex">
                              <!-- EDIT BUTTON -->
                              <a href="/admin/order/detail/<%= order.id%>"
                                class="btn btn-warning waves-effect waves-light"><i
                                  class="fa-solid fa-eye fa-fw"></i></i></a>
                            </div>
                          </td>
                        </tr>
                        <% })%>
                          <% } else { %>
                            <tr>
                              <td colspan="20" class="text-center">Không có dữ liệu</td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>
            </div>
            <!--/ Ajax Sourced Server-side -->
          </div>
    </div>
  </div>
  <!-- / Content -->
  <!-- DATATABLES SETTING -->
  <script>
    $(document).ready(function () {
      // ? Toaster Notification
      let success = '<%= success %>';
      if (success != '') {
        toastr.success(success, 'Thành Công');
      }
      let table = $('.datatables-ajax').DataTable({
        processing: true,
        responsive: true,
      });
    });
  </script>
  <%- include('../../partials/footer.ejs') %>