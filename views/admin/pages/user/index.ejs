<%- include('../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Khách Hàng</span>
    </h4>

    <div class="app-ecommerce">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">Khách Hàng</h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
          <a href="/admin/user/create" class="btn btn-primary">Thêm Khách Hàng</a>
        </div>
      </div>

      <div class="row">
        <!-- Ajax Sourced Server-side -->
        <div class="card">
          <h5 class="card-header">Bảng Khách Hàng</h5>
          <div class="card-datatable text-nowrap">
            <table class="datatables-ajax table">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Ảnh</th>
                  <th>Tên Khách Hàng</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Hành Động</th>
                </tr>
              </thead>
              <tbody>
                <% if(users.length> 0) { %> <% users.forEach((user,index)=> { %>
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <img src="<%= user.avatar %>" alt="<%= user.name %>" class="img-fluid"
                          style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
                      </td>
                      <td>
                        <%= user.name %>
                      </td>
                      <td>
                        <%= user.email %>
                      </td>
                      <td>
                        <%= user.phone %>
                      </td>

                      <td>
                        <div class="d-flex">
                          <!-- EDIT BUTTON -->
                          <a href="/admin/user/edit/<%= user.id%>" class="btn btn-warning waves-effect waves-light"><i
                              class="fa-solid fa-pen-to-square"></i></a>
                          <!-- DELETE BUTTON -->
                          <form action="/admin/user/delete/<%= user.id%>?_method=DELETE" method="post"
                            class="delete-item-form mx-3">
                            <button class="btn btn-danger waves-effect waves-light delete-item"><i
                                class="fa-solid fa-trash-can"></i></button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% })%>
                      <% } else { %>
                        <tr>
                          <td colspan="20" class="text-center">Không có dữ liệu</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Ajax Sourced Server-side -->
      </div>
    </div>
  </div>
  <!-- / Content -->
  <!-- DATATABLES SETTING -->
  <script>
    $(document).ready(function () {
      // ? Toaster Notification
      let success = '<%= success %>';
      if (success != '') {
        toastr.success(success, 'Thành Công');
      }
      let errors = '<%=errors%>';
      if (errors != '') {
        toastr.error(errors, 'Lỗi');
      }

      let table = $('.datatables-ajax').DataTable({
        processing: true,
        responsive: true,
      });
      // ? Change Status
      $('.change-status').on('change', function () {
        let id = $(this).data('id');
        if (status != null) {
          $.ajax({
            type: "PATCH",
            dataType: "json",
            url: '/admin/user/change-status/:id?_method=PATCH'.replace(':id', id),
            success: function (data) {
              if (data.status == 'success') {
                toastr.success(data.message, 'Thành Công');
              } else {
                toastr.error(data.message, 'Lỗi');
              }
            }
          });
        }
      })
    });
  </script>
  <%- include('../../partials/footer.ejs') %>