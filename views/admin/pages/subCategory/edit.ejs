<%- include('../../partials/header.ejs') %>
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-0">
            <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Danh Mục</span>
        </h4>
        <% let listErrors=[] %>
            <% listErrors=errors.map(error=> error.msg) %>
                <div class="app-ecommerce">
                    <!-- Add Product -->
                    <div
                        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
                        <div class="d-flex flex-column justify-content-center">
                            <h4 class="mb-1 mt-3">Chỉnh Sửa Danh Mục</h4>
                        </div>
                        <div class="d-flex align-content-center flex-wrap gap-3">
                            <a href="/admin/sub-category" class="btn btn-danger waves-effect waves-light"><i
                                    class="fa-solid fa-left-from-line"></i> &ensp; Trở Về</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <!-- Product Information -->
                            <div class="card mb-4">
                                <form action="/admin/sub-category/update/<%=subCategory.id%>?_method=PATCH" method="POST">
                                    <div class="card-header">
                                        <h5 class="card-tile mb-0">Chỉnh Sửa Danh Mục: <%= subCategory.name %>
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label" for="name">Tên</label>
                                            <input type="text" class="form-control" id="name" placeholder="Tên Danh Mục"
                                                name="name" aria-label="Tên Danh Mục" value="<%=subCategory.name%>" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="status">Danh Mục</label>
                                            <select id="select2Basic" class="select2 form-select form-select-lg"
                                                data-allow-clear="true" name="category_id">
                                                <option value="">---Chọn---</option>
                                                <% categories.forEach(category=>{ %>
                                                    <option value="<%= category.id %>" <%
                                                        if(subCategory.category_id==category.id) { %>
                                                        selected <% } %>>
                                                            <%= category.name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="status">Trạng Thái</label>
                                            <select id="status" name="status" class="form-select"
                                                data-placeholder="Size">
                                                <option value="">---Chọn---</option>
                                                <option value="0" <% if(subCategory.status==0) { %> selected <% } %>>Ẩn
                                                </option>
                                                <option value="1" <% if(subCategory.status==1) { %> selected <% } %>
                                                        >Hiện
                                                </option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-12 d-flex justify-content-end ">
                                                <a href="/admin/sub-category"
                                                    class="btn btn-danger waves-effect waves-light mx-3"><i
                                                        class="fa-solid fa-xmark"></i> &ensp; Hủy</a>
                                                <button type="submit"
                                                    class="btn btn-primary waves-effect waves-light"><i
                                                        class="fa-solid fa-floppy-disk"></i>&ensp;
                                                    Cập Nhật</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
    <!-- / Content -->
    <script>
        $(document).ready(function () {
            $('#select2Basic').select2();

            let errors = "<%= listErrors %>"
            if (errors != "") {
                errors = errors.split(',');
                errors.forEach(error => {
                    toastr.error(error);
                });
            }
        })
    </script>
    <%- include('../../partials/footer.ejs') %>