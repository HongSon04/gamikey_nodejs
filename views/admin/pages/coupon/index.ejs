<%- include('../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Mã Giảm Giá</span>
    </h4>

    <div class="app-ecommerce">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">Mã Giảm Giá</h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
          <a href="/admin/coupon/create" class="btn btn-primary">Thêm Mã Giảm Giá</a>
        </div>
      </div>
      <% let listErrors=[] %>
        <% listErrors=errors.map(error=> error.msg) %>
          <div class="row">
            <!-- Ajax Sourced Server-side -->
            <div class="card">
              <h5 class="card-header">Bảng Mã Giảm Giá</h5>
              <div class="card-datatable text-nowrap">
                <table class="datatables-ajax table">
                  <thead>
                    <tr>
                      <th>STT</th>
                      <th>Tên Mã Giảm Giá</th>
                      <th>CODE</th>
                      <th>Số Lượng</th>
                      <th>Giá Trị Giảm</th>
                      <th>Ngày Bắt Đầu</th>
                      <th>Ngày Hết Hạn</th>
                      <th>Trạng Thái</th>
                      <th>Thao Tác</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(coupons.length> 0) { %>
                      <% coupons.forEach((coupon, index)=> { %>
                        <tr>
                          <td>
                            <%= index + 1 %>
                          </td>
                          <td>
                            <%= coupon.name %>
                          </td>
                          <td>
                            <%= coupon.code %>
                          </td>
                          <td>
                            <%= coupon.quantity %>
                          </td>
                          <td>
                            <%= coupon.discountAmount %>
                              <%= coupon.discountType=='percentage' ? '%' : 'VNĐ' %>
                          </td>
                          <td>
                            <%= coupon.startDateDiscount.toLocaleString('en-US', { timeZone: 'Asia/Ho_Chi_Minh' }) %>
                          </td>
                          </td>
                          <td>
                            <%= coupon.endDateDiscount.toLocaleString('en-US', { timeZone: 'Asia/Ho_Chi_Minh' }) %>
                          </td>
                          <td>
                            <% if(coupon.status==1) { %>
                              <label class="switch">
                                <input type="checkbox" checked class="switch-input change-status"
                                  data-id="<%= coupon.id%>" style="width: 100%; height: 100%;" />
                                <span class="switch-toggle-slider">
                                  <span class="switch-on">
                                    <i class="ti ti-check"></i>
                                  </span>
                                  <span class="switch-off">
                                    <i class="ti ti-x"></i>
                                  </span>
                                </span>
                              </label>
                              <% } else { %>
                                <label class="switch">
                                  <input type="checkbox" class="switch-input change-status" data-id="<%= coupon.id%>"
                                    style="width: 100%; height: 100%;" />
                                  <span class="switch-toggle-slider">
                                    <span class="switch-on">
                                      <i class="ti ti-check"></i>
                                    </span>
                                    <span class="switch-off">
                                      <i class="ti ti-x"></i>
                                    </span>
                                  </span>
                                </label>
                                <% } %>
                          </td>
                          <td>
                            <div class="d-flex">
                              <!-- EDIT BUTTON -->
                              <a href="/admin/coupon/edit/<%=coupon.id%>"
                                class="btn btn-warning waves-effect waves-light"><i
                                  class="fa-solid fa-pen-to-square"></i></a>
                              <!-- DELETE BUTTON -->
                              <form action="/admin/coupon/delete/<%=coupon.id%>?_method=DELETE" method="post"
                                class="delete-item-form mx-3">
                                <button class="btn btn-danger waves-effect waves-light delete-item"><i
                                    class="fa-solid fa-trash-can"></i></button>
                              </form>
                            </div>
                          </td>
                        </tr>
                        <% }) %>
                          <% } else { %>
                            <tr>
                              <td colspan="10" class="text-center">Không có dữ liệu</td>
                            </tr>
                            <% } %>
                  </tbody>
                </table>
              </div>
            </div>
            <!--/ Ajax Sourced Server-side -->
          </div>
    </div>
  </div>
  <!-- / Content -->
  <!-- DATATABLES SETTING -->
  <script>
    $(document).ready(function () {
      // ? Toaster Notification
      let success = '<%= success %>';
      if (success != '') {
        toastr.success(success, 'Thành Công');
      }
      let table = $('.datatables-ajax').DataTable({
        processing: true,
        responsive: true,
      });
