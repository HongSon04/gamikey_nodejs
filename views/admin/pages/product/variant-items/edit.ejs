<%- include('../../../partials/header.ejs') %>
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-0">
            <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Variant</span>
        </h4>
        <% let listErrors=[] %>
            <% listErrors=errors.map(error=> error.msg) %>
                <div class="app-ecommerce">
                    <!-- Add Product -->
                    <div
                        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
                        <div class="d-flex flex-column justify-content-center">
                            <h4 class="mb-1 mt-3">Variant: <%=productVariant.name%>
                            </h4>
                        </div>
                        <div class="d-flex align-content-center flex-wrap gap-3">
                            <a href="/admin/product-variant/<%=productVariant.product_id%>"
                                class="btn btn-danger waves-effect waves-light"><i
                                    class="fa-solid fa-left-from-line"></i> &ensp; Trở Về</a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <!-- Product Information -->
                            <div class="card mb-4">
                                <form action="/admin/product-variant/store/<%=productVariant.id%>?_method=PATCH" method="POST">
                                    <div class="card-header">
                                        <h5 class="card-tile mb-0">Thông Tin Variant: <%=productVariant.name%>
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label" for="name">Tên</label>
                                            <input type="text" class="form-control" id="name" placeholder="Tên Danh Mục"
                                                name="name" aria-label="Tên Danh Mục"
                                                value="<%=productVariant.name%>" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" for="status">Trạng Thái</label>
                                            <select id="status" name="status" class="form-select"
                                                data-placeholder="status">
                                                <option value="">---Chọn---</option>
                                                <option <%=productVariant.status==0 ? 'selected' : '' %> value="0">Ẩn
                                                </option>
                                                <option <%=productVariant.status==1 ? 'selected' : '' %> value="1">Hiện
                                                </option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="row">
                                            <div class="col-12 d-flex justify-content-end">
                                                <a href="/admin/product-variant/<%=productVariant.product_id%>"
                                                    class="btn btn-danger waves-effect waves-light mx-3"><i
                                                        class="fa-solid fa-xmark"></i> &ensp; Hủy</a>
                                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                                    <i class="fa-solid fa-floppy-disk"></i>&ensp; Lưu
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
    <!-- / Content -->
    <script>
        $(document).ready(function () {
            let errors = '<%= listErrors %>';
            if (errors != '') {
                errors = errors.split(',');
                errors.forEach((error) => {
                    toastr.error(error);
                });
            }

        });
    </script>
    <%- include('../../../partials/footer.ejs') %>