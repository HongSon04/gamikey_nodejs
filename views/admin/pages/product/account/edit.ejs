<%- include('../../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium">
        <%=productType.type%>
      </span>
    </h4>
    <% let listErrors=[] %>
      <% listErrors=errors.map(error=> error.msg) %>
        <div class="app-ecommerce">
          <div class="d-flex flex-column justify-content-center">
            <h4 class="mb-1 mt-3">Sửa <%=productType.type%>: <%=productType.name%>
            </h4>
          </div>
          <div class="row">
            <div class="col-12">
              <!-- Product Information -->
              <div class="card mb-4">
                <form action="/admin/product-account/update/<%=product_account_id%>?_method=PATCH" method="POST">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-tile mb-0">Thông Tin <%=productType.type%>: <%=productType.name%>
                    </h5>
                    <div class="row">
                      <div class="col-12 d-flex justify-content-end">
                        <a href="/admin/product-account/<%=productAccount.product_id%>"
                          class="btn btn-danger waves-effect waves-light mx-3"><i class="fa-solid fa-xmark"></i> &ensp;
                          Hủy</a>
                        <button type="submit" class="btn btn-primary waves-effect waves-light">
                          <i class="fa-solid fa-floppy-disk"></i>&ensp; Lưu
                        </button>
                      </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row productItems">
                      <% if(productType.type=='Tài Khoản' ) { %>
                        <div class="row productItem">
                          <div class="mb-3 col-12">
                            <label class="form-label" for="username">Tài Khoản</label>
                            <input type="text" class="form-control" id="username" placeholder="Tài khoản"
                              name="username" aria-label="Tên Sản Phẩm" value="<%=productAccount.username%>" />
                          </div>
                          <div class="mb-3 col-12">
                            <label class="form-label" for="password">Mật Khẩu</label>
                            <input type="text" class="form-control" id="password" placeholder="Mật Khẩu" name="password"
                              aria-label="Tên Sản Phẩm" value="<%=productAccount.password%>" />
                          </div>
                        </div>
                        <input type="hidden" name="type_account" value="account">
                        <% } else if(productType.type=='Key' ) { %>
                          <div class="row productItem">
                            <div class="mb-3 col-12">
                              <label class="form-label" for="code">CODE</label>
                              <input type="text" class="form-control code" id="code"
                                placeholder="Mã CODE: ABCD-FEGH-JHKW" name="code" aria-label="Mã CODE"
                                value="<%=productAccount.code%>" />
                            </div>
                          </div>
                          <input type="hidden" name="type_account" value="key">
                          <% } %>
                    </div>
                  </div>
                  <input type="hidden" name="product_id" value="<%=productAccount.product_id%>">
                </form>
              </div>
            </div>
          </div>
        </div>
  </div>
  <!-- / Content -->
  <script type="application/javascript" src="/tinymce/tinymce.min.js"></script>
  <!-- Script element sourcing the TinyMCE configuration -->
  <script type="application/javascript" src="/admin/js/tinymce-config.js"></script>
  <script>
    $(document).ready(function () {
      let errors = '<%= listErrors %>';
      if (errors != '') {
        errors = errors.split(',');
        errors.forEach((error) => {
          toastr.error(error);
        });
      }

    });
  </script>
  <%- include('../../../partials/footer.ejs') %>