<%- include('../../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Sản Phẩm</span>
    </h4>

    <div class="app-ecommerce">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">
            <%=productType.type%>: <%=productType.name%>
          </h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
          <a href="/admin/product-account/create/<%=product_id%>" class="btn btn-primary">Thêm Sản Phẩm</a>
        </div>
      </div>

      <div class="row">
        <!-- Ajax Sourced Server-side -->
        <div class="card">
          <h5 class="card-header">Bảng Sản Phẩm</h5>
          <div class="card-datatable text-nowrap">
            <table class="datatables-ajax table">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>CODE</th>
                  <th>Tài Khoản</th>
                  <th>Mật Khẩu</th>
                  <th>Hành Động</th>
                </tr>
              </thead>
              <tbody>
                <% if(productAccounts.length> 0) { %> <% productAccounts.forEach((productAccount,index)=> { %>
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <%= productAccount.code %>
                      </td>
                      <td>
                        <%= productAccount.username %>
                      </td>
                      <td>
                        <%= productAccount.password %>
                      </td>
                      <td>
                        <div class="d-flex">
                          <!-- EDIT BUTTON -->
                          <a href="/admin/product-account/edit/<%= productAccount.id%>"
                            class="btn btn-warning waves-effect waves-light"><i
                              class="fa-solid fa-pen-to-square"></i></a>
                          <!-- DELETE BUTTON -->
                          <form action="/admin/product-account/delete/<%= productAccount.id%>?_method=DELETE"
                            method="post" class="delete-item-form mx-3">
                            <button class="btn btn-danger waves-effect waves-light delete-item"><i
                                class="fa-solid fa-trash-can"></i></button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% })%>
                      <% } else { %>
                        <tr>
                          <td colspan="20" class="text-center">Không có dữ liệu</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Ajax Sourced Server-side -->
      </div>
    </div>
  </div>
  <!-- / Content -->
  <!-- DATATABLES SETTING -->
  <script>
    $(document).ready(function () {
      // ? Toaster Notification
      let success = '<%= success %>';
      if (success != '') {
        toastr.success(success, 'Thành Công');
      }
      let table = $('.datatables-ajax').DataTable({
        responsive: true,
      });
    });
  </script>

  <%- include('../../../partials/footer.ejs') %>