<%- include('../../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /<%=exitstProduct.name%>/</span><span class="fw-medium">
        Variant</span>
    </h4>

    <div class="app-ecommerce">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">Variant: <strong>
              <%=exitstProduct.name%>
            </strong></h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
          <a href="/admin/product-variant/create/<%=product_id%>" class="btn btn-primary">Thêm Variant</a>
        </div>
      </div>

      <div class="row">
        <!-- Ajax Sourced Server-side -->
        <div class="card">
          <h5 class="card-header">Bảng Variant</h5>
          <div class="card-datatable text-nowrap">
            <table class="datatables-ajax table">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Tên Sản Phẩm</th>
                  <th>Trạng Thái</th>
                  <th>Hành Động</th>
                </tr>
              </thead>
              <tbody>
                <% if(productVariants.length> 0) { %> <% productVariants.forEach((productVariant,index)=> { %>
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <%= productVariant.name %>
                      </td>
                      <td>
                        <% if(productVariant.status==1) { %>
                          <label class="switch">
                            <input type="checkbox" checked class="switch-input change-status"
                              data-id="<%= productVariant.id%>" style="width: 100%; height: 100%;" />
                            <span class="switch-toggle-slider">
                              <span class="switch-on">
                                <i class="ti ti-check"></i>
                              </span>
                              <span class="switch-off">
                                <i class="ti ti-x"></i>
                              </span>
                            </span>
                          </label>
                          <% } else { %>
                            <label class="switch">
                              <input type="checkbox" class="switch-input change-status"
                                data-id="<%= productVariant.id%>" style="width: 100%; height: 100%;" />
                              <span class="switch-toggle-slider">
                                <span class="switch-on">
                                  <i class="ti ti-check"></i>
                                </span>
                                <span class="switch-off">
                                  <i class="ti ti-x"></i>
                                </span>
                              </span>
                            </label>
                            <% } %>
                      </td>
                      <td>
                        <div class="d-flex">
                          <!-- EDIT BUTTON -->
                          <a href="/admin/product-variant/edit/<%= productVariant.id%>"
                            class="btn btn-warning waves-effect waves-light"><i
                              class="fa-solid fa-pen-to-square"></i></a>
                          <!-- DELETE BUTTON -->
                          <form action="/admin/product-variant/delete/<%= productVariant.id%>?_method=DELETE"
                            method="post" class="delete-item-form mx-3">
                            <button class="btn btn-danger waves-effect waves-light delete-item"><i
                                class="fa-solid fa-trash-can"></i></button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% })%>
                      <% } else { %>
                        <tr>
                          <td colspan="20" class="text-center">Không có dữ liệu</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Ajax Sourced Server-side -->
      </div>
    </div>
  </div>
  <!-- / Content -->
  <!-- DATATABLES SETTING -->
  <script>
    $(document).ready(function () {
      // ? Toaster Notification
      let success = '<%= success %>';
      if (success != '') {
        toastr.success(success, 'Thành Công');
      }
      let table = $('.datatables-ajax').DataTable({
        processing: true,
        responsive: true,
      });
      // ? Change Status
      $('.change-status').on('change', function () {
        let id = $(this).data('id');
        if (status != null) {
          $.ajax({
            type: "PATCH",
            dataType: "json",
            url: '/admin/product-variant/change-status/:id?_method=PATCH'.replace(':id', id),
            success: function (data) {
              if (data.status == 'success') {
                toastr.success(data.message, 'Thành Công');
              } else {
                toastr.error(data.message, 'Lỗi');
              }
            }
          });
        }
      })
    });
  </script>

  <%- include('../../../partials/footer.ejs') %>