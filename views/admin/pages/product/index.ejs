<%- include('../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Sản Phẩm</span>
    </h4>

    <div class="app-ecommerce">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">Sản Phẩm</h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
          <a href="/admin/product/trash" class="btn btn-danger">Thùng Rác</a>
          <a href="/admin/product/create" class="btn btn-primary">Thêm Sản Phẩm</a>
        </div>
      </div>

      <div class="row">
        <!-- Ajax Sourced Server-side -->
        <div class="card">
          <h5 class="card-header">Bảng Sản Phẩm</h5>
          <div class="card-datatable text-nowrap">
            <table class="datatables-ajax table">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>Ảnh</th>
                  <th>Tên Sản Phẩm</th>
                  <th>Danh Mục</th>
                  <th>Danh Mục Phụ</th>
                  <th>Thương Hiệu</th>
                  <th>Giá</th>
                  <th>Trạng Thái</th>
                  <th>Hành Động</th>
                </tr>
              </thead>
              <tbody>
                <% if(products.length> 0) { %> <% products.forEach((product,index)=> { %>
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <img src="<%= product.image %>" alt="<%= product.name %>"
                          style="width: 100px; height: 100px; border-radius: 16px;" />
                      </td>
                      <td>
                        <%= product.name %>
                      </td>
                      <td>
                        <%= product.category_id.name %>
                      </td>
                      <td>
                        <%= product.sub_category_id.name %>
                      </td>
                      <td>
                        <%= product.brand_id.name %>
                      </td>
                      <td>
                        <%= product.price %>
                      </td>
                      <td>
                        <% if(product.status==1) { %>
                          <label class="switch">
                            <input type="checkbox" checked class="switch-input change-status" data-id="<%= product.id%>"
                              style="width: 100%; height: 100%;" />
                            <span class="switch-toggle-slider">
                              <span class="switch-on">
                                <i class="ti ti-check"></i>
                              </span>
                              <span class="switch-off">
                                <i class="ti ti-x"></i>
                              </span>
                            </span>
                          </label>
                          <% } else { %>
                            <label class="switch">
                              <input type="checkbox" class="switch-input change-status" data-id="<%= product.id%>"
                                style="width: 100%; height: 100%;" />
                              <span class="switch-toggle-slider">
                                <span class="switch-on">
                                  <i class="ti ti-check"></i>
                                </span>
                                <span class="switch-off">
                                  <i class="ti ti-x"></i>
                                </span>
                              </span>
                            </label>
                            <% } %>
                      </td>
                      <td>
                        <div class="d-flex">
                          <!-- EDIT BUTTON -->
                          <a href="/admin/product/edit/<%= product.id%>"
                            class="btn btn-warning waves-effect waves-light"><i
                              class="fa-solid fa-pen-to-square"></i></a>
                          <!-- DELETE BUTTON -->
                          <form action="/admin/product/delete/<%= product.id%>?_method=DELETE" method="post"
                            class="delete-item-form mx-3">
                            <button class="btn btn-danger waves-effect waves-light delete-item"><i
                                class="fa-solid fa-trash-can"></i></button>
                          </form>
                          <div class="btn-group">
                            <button type="button"
                              class="btn btn-primary dropdown-toggle hide-arrow waves-effect waves-light"
                              data-bs-toggle="dropdown" aria-expanded="true">
                              <i class="fa-solid fa-gear"></i>
                            </button>
                            <ul class="dropdown-menu" data-popper-placement="top-start" data-popper-reference-hidden=""
                              style="position: absolute; inset: auto auto 0px 0px; margin: 0px; transform: translate(0px, -40px);">
                              <li><a class="dropdown-item" href="/admin/product-variant/<%= product.id%>">Variants</a></li>
                              <li><a class="dropdown-item" href="javascript:void(0);">Thêm Tài Khoản</a></li>

                            </ul>
                          </div>
                        </div>
                      </td>
                    </tr>
                    <% })%>
                      <% } else { %>
                        <tr>
                          <td colspan="20" class="text-center">Không có dữ liệu</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Ajax Sourced Server-side -->
      </div>
    </div>
  </div>
  <!-- / Content -->
  <!-- DATATABLES SETTING -->
  <script>
    $(document).ready(function () {
      // ? Toaster Notification
      let success = '<%= success %>';
      if (success != '') {
        toastr.success(success, 'Thành Công');
      }
      let table = $('.datatables-ajax').DataTable({
        responsive: true,
      });
