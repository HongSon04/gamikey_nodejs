<%- include('../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Thương Hiệu</span>
    </h4>

    <div class="app-ecommerce">
      <!-- Add Product -->
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1 mt-3">Thương Hiệu</h4>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-3">
          <a href="/admin/brand/create" class="btn btn-primary">Thêm Thương Hiệu</a>
        </div>
      </div>

      <div class="row">
        <!-- Ajax Sourced Server-side -->
        <div class="card">
          <h5 class="card-header">Bảng Thương Hiệu</h5>
          <div class="card-datatable text-nowrap">
            <table class="datatables-ajax table">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>ID</th>
                  <th>Hình Ảnh</th>
                  <th>Tên Thương Hiệu</th>
                  <th>Trạng Thái</th>
                  <th>Hành Động</th>
                </tr>
              </thead>
              <tbody>
                <% if(Brands.length> 0) { %> <% Brands.forEach((Brands,index)=> { %>
                  <!-- get name category -->
                    <tr>
                      <td>
                        <%= index + 1 %>
                      </td>
                      <td>
                        <%= Brands.id %>
                      </td>
                      <td>
                        <img src="<%= Brands.image %>" style="width: 150px;height: 100px;" alt="">
                      </td>
                      <td>
                        <%= Brands.name %>
                      </td>
                      <td>
                        <% if(Brands.status==1) { %>
                          <label class="switch">
                            <input type="checkbox" checked class="switch-input change-status"
                              data-id="<%= Brands.id%>" style="width: 100%; height: 100%;" />
                            <span class="switch-toggle-slider">
                              <span class="switch-on">
                                <i class="ti ti-check"></i>
                              </span>
                              <span class="switch-off">
                                <i class="ti ti-x"></i>
                              </span>
                            </span>
                          </label>
                          <% } else { %>
                            <label class="switch">
                              <input type="checkbox" class="switch-input change-status" data-id="<%= Brands.id%>"
                                style="width: 100%; height: 100%;" />
                              <span class="switch-toggle-slider">
                                <span class="switch-on">
                                  <i class="ti ti-check"></i>
                                </span>
                                <span class="switch-off">
                                  <i class="ti ti-x"></i>
                                </span>
                              </span>
                            </label>
                            <% } %>
                      </td>
                      <td class="d-flex">
                        <!-- EDIT BUTTON -->
                        <a href="/admin/sub-category/edit/<%= Brands.id%>"
                          class="btn btn-warning waves-effect waves-light"><i class="fa-solid fa-pen-to-square"></i></a>
                        <!-- DELETE BUTTON -->
                        <form action="/admin/sub-category/delete/<%= Brands.id%>?_method=DELETE" method="post"
                          class="delete-item-form mx-3">
                          <button class="btn btn-danger waves-effect waves-light delete-item"><i
                              class="fa-solid fa-trash-can"></i></button>
                        </form>
                      </td>
                    </tr>
                    <% })%>
                      <% } else { %>
                        <tr>
                          <td colspan="4" class="text-center">Không có dữ liệu</td>
                        </tr>
                        <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Ajax Sourced Server-side -->
      </div>
    </div>
  </div>
  <!-- / Content -->
  <!-- DATATABLES SETTING -->
  <script>
    $(document).ready(function () {
      // ? Toaster Notification
      let success = '<%= success %>';
      if (success != '') {
        toastr.success(success, 'Thành Công');
      }
      let table = $('.datatables-ajax').DataTable({
        processing: true,
        responsive: true,
      });
      // ? Prevent Default Form delete-item-form 
      $('.delete-item').on('click', function (e) {
        e.preventDefault();
        let form = $(this).closest('form');
        Swal.fire({
          title: 'Bạn có chắc chắn muốn xóa?',
          text: "Dữ liệu sẽ không thể khôi Phụ lại sau khi xóa!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Xóa',
          cancelButtonText: 'Hủy'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit();
          }
        })
      });

      // ? Change Status
      $('.change-status').on('change', function () {
        let id = $(this).data('id');
        if (status != null) {
          $.ajax({
            type: "PATCH",
            dataType: "json",
            url: '/admin/sub-category/change-status/:id?_method=PATCH'.replace(':id', id),
            success: function (data) {
              if (data.status == 'success') {
                toastr.success(data.message, 'Thành Công');
              } else {
                toastr.error(data.message, 'Lỗi');
              }
            }
          });
        }
      })
    });
  </script>
  <%- include('../../partials/footer.ejs') %>