<%- include('../../partials/header.ejs') %>
  <!-- Content -->

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-0">
      <span class="text-muted fw-light">Ecommerce /</span><span class="fw-medium"> Thương Hiệu</span>
    </h4>
    <% let listErrors=[] %>
      <% listErrors=errors.map(error=> error.msg) %>
        <div class="app-ecommerce">
          <!-- Add Product -->
          <div
            class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
            <div class="d-flex flex-column justify-content-center">
              <h4 class="mb-1 mt-3">Thêm Thương Hiệu</h4>
            </div>
            <div class="d-flex align-content-center flex-wrap gap-3">
              <a href="/admin/brand" class="btn btn-danger waves-effect waves-light"><i
                  class="fa-solid fa-left-from-line"></i> &ensp; Trở Về</a>
            </div>
          </div>

          <div class="row">
            <div class="col-8">
              <!-- Product Information -->
              <div class="card mb-4">
                <form action="/admin/brand/store" method="POST" enctype="multipart/form-data">
                  <div class="card-header">
                    <h5 class="card-tile mb-0">Thông Tin Thương Hiệu</h5>
                  </div>
                  <div class="card-body">
                    <div class="mb-3">
                      <label class="form-label" for="name">Tên</label>
                      <input type="text" class="form-control" id="name" placeholder="Tên Thương Hiệu" name="name"
                        aria-label="Tên Thương Hiệu" />
                    </div>
                    <div class="mb-3">
                      <label for="formFile" class="form-label">Ảnh</label>
                      <input class="form-control" type="file" id="formFile" name="image" />
                    </div>
                    <div class="mb-3">
                      <label class="form-label" for="status">Trạng Thái</label>
                      <select id="status" name="status" class="form-select " data-placeholder="Size">
                        <option value="">---Chọn---</option>
                        <option value="0">Ẩn</option>
                        <option value="1">Hiện</option>
                      </select>
                    </div>
                  </div>
                  <div class="card-footer">
                    <div class="row">
                      <div class="col-12 d-flex justify-content-end">
                        <a href="/admin/brand" class="btn btn-danger waves-effect waves-light mx-3"><i
                            class="fa-solid fa-xmark"></i> &ensp; Hủy</a>
                        <button type="submit" class="btn btn-primary waves-effect waves-light">
                          <i class="fa-solid fa-floppy-disk"></i>&ensp; Thêm
                        </button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="col-4">
              <div class="mb-4">
                <img class="image-show img-fluid" src="" alt="" style="border-radius: 16px;">
              </div>
            </div>
          </div>
        </div>
  </div>
  <!-- / Content -->
  <script>
    $(document).ready(function () {
      $('#select2Basic').select2();
      let errors = '<%= listErrors %>';
      if (errors != '') {
        errors = errors.split(',');
        errors.forEach((error) => {
          toastr.error(error);
        });
      }
      $('#formFile').change(function () {
        let file = $(this)[0].files[0];
        let reader = new FileReader();
        reader.onload = function (e) {
          $('.image-show').attr('src', e.target.result);
        }
        reader.readAsDataURL(file);
      });
    })
  </script>
  <%- include('../../partials/footer.ejs') %>