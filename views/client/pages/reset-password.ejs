<%- include('../layouts/resources/css.ejs'); -%>

    <main id="authForm">
        <div class="auth_layout">
            <div class="container authForm_container h-100">
                <div class="d-flex align-items-center justify-content-center h-100 col-10">
                    <div class="auth_body">
                        <div class="auth_body_container row">
                            <div class="col-second auth_body_left col-6 order-2">
                                <div class="d-flex align-items-center justify-content-center h-100 w-100">
                                    <div class="auth_body_left_container">
                                        <% if(issetToken==false) { %>
                                            <h2>Không tìm thấy yêu cầu khôi phục mật khẩu này</h2>
                                            <h3>Hoặc yêu cầu khôi phục mật khẩu đã hết hạn</h3>
                                            <a class="btn btn-primary create-btn" href="/forgot-password">Quên Mật
                                                Khẩu</a>
                                            <% } else { %>
                                                <h2>Quên Mật Khẩu</h2>
                                                <h3>Chúng tôi sẽ gửi cho bạn một email cho phép bạn đặt mật khẩu mới.
                                                </h3>
                                                <form action="/reset-password/<%=token%>" class="form_auth"
                                                    method="post">
                                                    <div class="col-12 my-4">
                                                        <div class="input-group">
                                                            <label for="password" class="input-group-text"><i
                                                                    class="fas fa-lock-alt fa-fw"></i></label>
                                                            <input id="password" type="password"
                                                                class="form-control passwordType"
                                                                placeholder="Nhập Mật Khẩu" name="password">
                                                            <span class="input-group-text show_hide_password"
                                                                id="basic-addon"><i class="fas fa-eye"></i></span>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 my-3">
                                                        <div class="input-group">
                                                            <label for="password_confirm" class="input-group-text"><i
                                                                    class="fas fa-lock-alt fa-fw"></i></label>
                                                            <input id="password_confirm" type="password"
                                                                class="form-control passwordType"
                                                                placeholder="Nhập Lại Mật Khẩu" name="password_confirm">
                                                            <!-- SHOW HIDE PASSWORD -->
                                                            <span class="input-group-text show_hide_password"
                                                                id="basic-addon"><i class="fas fa-eye"></i></span>
                                                        </div>
                                                    </div>
                                                    <!-- BUTTON SUBMIT LOGIN -->
                                                    <div class="col-12">
                                                        <button type="submit" class="btn btn-primary create-btn">Đổi Mật Khẩu</button>
                                                    </div>
                                                </form>
                                                <!-- FORGET PASSWORD -->
                                                <div class="forget_password my-2">
                                                    <a href="/login">Quay Lại</a>
                                                </div>
                                                <% } %>

                                    </div>
                                </div>
                            </div>
                            <div class="col-first auth_body_right col-6 order-1">
                                <div class="auth_body_right_container d-flex justify-content-center">
                                    <div class="">
                                        <a href="/"><img src="/client/images/Logo-Gamikey-1024x576.png.webp" alt=""></a>
                                        <h2>GAMIKEY, Mua Key Là Rẻ</h2>
                                        <div class="desciption">Lần đầu tiên ở đây? Tạo tài khoản của bạn để mua sắm
                                            trên Muakey.com</div>
                                        <a href="/register" class="primary-btn create-btn">Tạo Tài Khoản</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="auth_footer"></div>
                </div>
            </div>
        </div>
    </main>
    <%- include('../layouts/resources/javascript.ejs'); -%>
        <script>
            let success = '<%= success %>';
            if (success != '') {
                toastr.success(success, 'Thành Công');
            }
            let errors = '<%= errors %>';
            if (errors != '') {
                toastr.error(errors, 'Lỗi');
            }
        </script>